<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @* Chèn link Css của free template*@
    <link href="~/Content/UserCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/UserCssLayout/screen.css" rel="stylesheet" /> 
    @* Chèn Css designs*@
    <link href="~/Content/UserCssLayout/UserCss.css" rel="stylesheet" />
    @* Chèn Css font ký tự*@
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    @* Chèn link css, javascript của Nivoslider *@
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
   
</head>

<body>
   
    <div id="FullPage">
        <section class="blank">           
            <div class="flash">
                <div class="icDienThoai">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    (08) 5445-4444
                </div>
                @* Tạo div đăng ký đăng nhập *@
                <div class="DangKyDangNhap">
                    @Html.Action("GioHangPartial","GioHang")                    

                    <i class="fa fa-user-o" aria-hidden="true"></i>     
                    
                    @*@Html.ActionLink("Đăng ký", "DangKy", "NguoiDung", htmlAttributes: new { @class = "DangKy" })*@
                    <a href=@Url.Action("DangKy", "NguoiDung")> <div class="DangKy" style="margin-right:10px;">Đăng ký</div></a>
                    <i class="fa fa-sign-in" style="margin-right:9px;" aria-hidden="true"></i>

                    @*@Html.ActionLink("Đăng nhập", "DangNhap", null, htmlAttributes: new { @class = "DangNhap" })*@
                    <a href=@Url.Action("DangNhap", "NguoiDung")> <div class="DangNhap">Đăng nhập</div></a>                    

                </div>
            </div>
            @* Xây dưng div menu header *@
            <div class="flash success" id="divMenu">
                @* Text box tìm kiếm *@
                <div id="txtTimKiem">
                    @using (Html.BeginForm("KetQuaTim","TimKiem",FormMethod.Post))
                    {
                        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "textBoxTimKiem", @placeholder = "Nhập vào từ khóa cần tìm" })
                        @* Chèn image button *@
                        <div id="divHinhAnhTimKiem">
                            <button type="submit"><img src="~/Images/ic_search_white_24dp_1x.png" /></button>
                        </div>
                    }
                </div>
                @* Menu bên phải header*@
                <ul class="navMenu">
                    <li>
                        <a href="/">Trang chủ</a>
                    </li>
                    <li>
                        <a href="#">Giới thiệu</a>
                    </li>
                    <li>
                        <a href="#">Sách</a>
                    </li>
                    <li>
                        <a href="#">Hướng dẫn</a>
                    </li>
                    <li>
                        <a href="#">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </section>
        <section>
            @* div menu bên trái*@
            <div id="divMenuLeft">
                <div class="activity">
                    @Html.Action("SachMoiPartial","Sach")
                </div>
            </div>
            @* chèn div nivo slider*@
            <div id="slider" class="nivoSlider">
                <img id="slider_img" src="~/Images/Asus2.png" />
                <img id="slider_img"src="~/Images/Asus1.png" />
            </div>
            <div style="clear:both"></div>
        </section>
        @* div body*@
        <div id="NoiDung">
            @RenderBody()
        </div>
        <section>
            @* Phần chủ đề *@
            <div>
               @Html.Action("ChuDePartial","ChuDe")
            </div>

            <hr>


            <hr>


        </section>
        @* div nhà xuất bản*@
        <section class="blank items">
            <div id="divLeft">
                <div class="item">
                    <div class="item-info">
                        @* Partial của nhà xuất bản*@
                        @Html.Action("NXBpartial","NhaXuatBan")
                        
                    </div>
                    <img src="http://lorempixel.com/400/300/" alt="Image">
                </div>
            </div>
            <div id="divRight">
                @RenderSection("NoiDungBenPhai",false)
            </div>
            <div style="clear:both"></div>
            <div>
                <a href="#" class="button button-buy">Chào mừng đến với MyBooks.Vn</a>
            </div>

    </section>
    </div>
    @* div chạy nivo slider*@
    <script type="text/javascript">

        $(window).on('load', function () {
            $('#slider').nivoSlider({
                controlNav: false,
                nextText: '',
                prevText: ''
            });
        });
    </script>
</body>
</html>

@using DoAnWeb_BanSach.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<h2>Sửa giỏ hàng</h2>
<table>
    <tr>
        <td>Mã sách</td>

        <td>Tên sách</td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSach</td>

            <td>@String.Format("{0:0,0}", item.dDonGia) VND</td>
            @using (Html.BeginForm("UpdateGioHang", "GioHang", new { @iMaSach = item.iMaSach }))
            {
                <td>@Html.TextBox("txtSoLuong", item.iSoLuong)</td>
                <td>@String.Format("{0:0,0}", item.ThanhTien) VND</td>
                <td>
                    <input type="submit" value="Cập nhật" />
                    <br />
                    @Html.ActionLink("Xóa", "DeleteGioHang", new { @iMaSP = item.iMaSach })
                </td>
            }
        </tr>
    }
</table>
<style>
    #divGioHang {
        border: 1px solid #EEEEEE;
        margin-left: 10%;
    }

        #divGioHang td {
            padding: 10px;
            border: 1px solid #EEEEEE;
        }
</style>